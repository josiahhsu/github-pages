#include shared/gridhelpers.p8

function _init()
	cls()
	// grid size
	m,n = 16,13
	set_grid(make_grid(),true)
	
	// player position and ins
	px,py,pi = 1,1,0
	
	notes ={"b#","b","a#","a",
	        "g#","g","f#","f",
	        "e","d#","d","c#","c"}
	tempo = 5
	
	t = 0
	state = note_state()
end

function _update()
	controls()
	state.update()
end

function _draw()
	draw_grid()
	state.draw()
end
