function coords(x,y)
	//translates value to partial
	//position on grid
	return (x-1)*7+2,y*7
end

function draw_grid()
	rectfill(0,0,126,128,1)
	draw_state()
	print("â¬†ï¸â¬‡ï¸â¬…ï¸âž¡ï¸+âŽ "..
